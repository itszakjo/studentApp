<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AttendenceAct">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarmm"
        android:background="#634975"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" الغياب "
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="#fff"/>



        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <Spinner
        android:id="@+id/registeredGroupsSpinner"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:popupBackground="@drawable/card_main_bg"
        android:background="@drawable/card_main_bg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:layout_height="50dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/toolbarmm"
        android:id="@+id/attendence_rec"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent" />

</RelativeLayout>